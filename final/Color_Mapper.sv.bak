// color_mapper: Decide which color to be output to VGA for each pixel.
module  color_mapper ( input is_stickman,       // Whether current pixel belongs to the stickman 
                       input is_ground,         //   or background
                       input        [9:0] DrawX, DrawY,       // Current pixel coordinates
                       output logic [7:0] VGA_R, VGA_G, VGA_B // VGA RGB output
                     );
    
    logic [7:0] Red, Green, Blue;
    
    // Output colors to VGA
    assign VGA_R = Red;
    assign VGA_G = Green;
    assign VGA_B = Blue;
    
    // Assign color
    always_comb
    begin
        if (is_stickman == 1'b1) 
        begin
            Red = 8'h0f;
            Green = 8'h0f;
            Blue = 8'h0f;
        end

        else if (is_ground == 1'b1)
        begin
            Red = 8'h00;
            Green = 8'h00;
            Blue = 8'h00;
        end

        else 
        begin
            Red = 8'h4f; 
            Green = 8'h4f;
            Blue = 8'h7f - {1'b0, DrawX[9:3]};
        end
    end 
    
endmodule
